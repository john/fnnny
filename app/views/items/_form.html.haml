= form_for @item, :html => {:multipart => true} do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
          
  .field{:style => "margin-bottom: 10px; "}
    = f.label :post_to_fb, "Also post to facebook?", :style => "display: inline;"
    = f.check_box :post_to_fb, :style => "margin-bottom: 5px;"
    
  .field
    = f.label :name
    = f.text_field :name
    
    
  - if @bookmarklet_view
    - @style = 'height: 150px;'
    = hidden_field_tag :bookmarklet, true
    = f.hidden_field :url
  - else
    - @style = 'height: 150px;'
    .field
      = f.label :url
      = f.text_field :url
  
  .field
    = f.label :image
    = f.hidden_field :image_cache
    = f.file_field :image #, :accept => "/image/*", :capture => 'camera'
    
  .field
    = f.label :description
    = f.text_area :description, :style => @style
    
  = f.label :tag_list, "Tags (comma separated)"
  = text_field_tag :tag_list
  
  <br />
    
  -# .field
  -#   = f.label :location
  -#   = f.text_field :location
  -# .field
  -#   = f.label :latitude
  -#   = f.text_field :latitude
  -# .field
  -#   = f.label :longitude
  -#   = f.text_field :longitude
  .actions
    = f.submit 'Save'
