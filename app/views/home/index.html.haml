- if user_signed_in?
  
  - if @items.blank?
    = render :partial => "home/getting_started"
    
  - else
    .row
      .span12
        = link_to 'Everything'
        &#183;
        = link_to 'People I follow'
    .row
      .span8
        - @items.each do |item|
          = render :partial => "items/item", :locals => {:item => item}
          
      .span4
        
        = link_to 'Add something fnnny', new_item_path, :class => "btn btn-large btn-primary", :style => "margin: 10px 0;"
        -# = link_to 'Mo funny, mo better', new_item_path, :class => "btn btn-large", :style => "margin: 10px 0;"
        -# = link_to 'Feed the maw', new_item_path, :class => "btn btn-large", :style => "margin: 10px 0;"
        
        %h6{:style => "margin: 10px 0 0 0;"} Recent activity
        
        :css
          .recent { list-style-type: none; margin: 0; padding: 0; }
          .recent li { border-bottom: 1px solid #ddd; padding: 10px 0; margin: 0; }
        %ul.recent
          - @activities.each do |activity|
            %li
              %small.muted
                #{time_ago_in_words(activity.created_at)} ago
                
              -# %div= render_activity(activity)
              - if activity.trackable_type == 'Item'
                %div
                  <strong>#{link_to activity.owner.display_name, person_path(activity.owner), :class => 'gray'}</strong> added
                %div
                  = link_to activity.trackable.name, item_path(activity.trackable)
                
              - if activity.trackable_type == 'User'
                %div
                  <strong>#{link_to activity.trackable.display_name, person_path(activity.trackable), :class => 'gray'}</strong> signed up!
                  = render :partial => "people/follow", :locals => {:user => activity.trackable, :size => 'btn-mini'}
                  
              - if activity.trackable_type == 'Comment'
                %div
                  <strong>#{link_to activity.owner.display_name, person_path(activity.owner), :class => 'gray'}</strong> commented on
                
                
                
                
- else
